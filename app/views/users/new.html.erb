<div class="sm_form_container" style="height: auto;">
  <center><h1>	Create a Free Account </h1></center>
  <%= form_for @user do |f|  %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <ul style="margin-left: 10px; margin-top: 10px;">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="field">
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
      </div>
              
      <div class="field">
        <%= f.label :username %><br/>
        <%= f.text_field :username, :maxlength => 15 %>
      </div>
    </div>
    
    <div class="row">
      <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
      </div>
  
      <div class="field">
        <%= f.label :zip_code %><br/>
        <%= f.text_field :zip_code %>
      </div>
    </div>
    
    <div class="row">
     <div class="field">
        <%= f.label "I'm a" %><br />
         <div class="check-gender">
          <div class="check check-male" style="margin: 0">
            <%= f.radio_button :gender, 'Male', id: 'user_gender_male' %>
            <label for="user_gender_male">Male</label>
          </div>
          <div class="check check-female" style="margin: 0">
            <%= f.radio_button :gender, 'Female', id: 'user_gender_female' %>
            <label for="user_gender_female">Female</label>
          </div>
        </div>
      </div>
      
      <div class="field">
        <%= f.label "Interested in" %><br />
        <div class="check-gender">
          <div class="check check-male" style="margin: 0">
            <input id="user_sexuality_male" name="user[male_sexuality]" type="checkbox" value="Male" class="jqTransformHidden">
            <label for="user_sexuality_male">Male</label>
          </div>
          <div class="check check-female" style="margin: 0">
            <input id="user_sexuality_female" name="user[female_sexuality]" type="checkbox" value="Female" class="jqTransformHidden">
            <label for="user_sexuality_female">Female</label>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="field" id=""> 
        <%= f.label :birthday %><br />
        <%= f.date_select :birthday, :start_year => 1995, :end_year => 1932, use_short_month: true  %>
      </div>
      
      <div class="field">
        <%= f.submit "sign up", class: 'btn' %>
      </div>
    </div>
  <% end %>
  <div align="center" style="height:40px;">
    <span style="font-size: 12px">By signing up you agree to the <a href="/terms" target="_blank">Terms of Use</a> and the
      <a href="/privacy" target="_blank">Privacy Policy</a>.</span>
  </div>
</div>