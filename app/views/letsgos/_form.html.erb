<%= form_for(@letsgo, remote: true) do |f| %>
    <div class = "form-group" style="margin-bottom: -15px; margin-top: 10px;">
      <%= label_tag :body, 'Post a Date', class: 'control-label' %>
    </div>
    <hr/>
    <div class="common_sec">
	<div class="form-group" style="display: inline;">
        <%= label_tag :body, 'Let\'s Go..', class: 'control-label', style: "position: absolute; margin-left: -187px; color: #353334; font-size: 15px; margin-top: 4px;" %>
		<%= f.text_area :content, placeholder: "Propose new date...",class: 'form-control', style: 'height:57px; padding-top: 25px;' %>
	</div>
	<div class="form-group" style="text-align:left;width: 279px;margin-left: -118px;">
		<%= f.select :tag, options_for_select( [["Select One", ""], "Eat/Drink", "Listen/Watch", "Play", "Explore", "Other"]), class: 'form-control' %>
	</div>
		<%= f.submit "Post", class: 'btn btn-primary', style: "margin: -60px -1px 5px 5px; width:174px;" %>
    </div>
		<% end %>
